<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/twitter_bird_light">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/activity_tweet_title"
            android:layout_gravity="center_horizontal"/>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.twitter.android.yamba.TweetFragment"
            android:id="@+id/tweet_fragment"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/fragment_tweet"/>

</LinearLayout>
